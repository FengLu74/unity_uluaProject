<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:background="@drawable/xyw_amount_text_bg_normal"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_centerInParent="true"
        android:layout_width="80dp"
        android:layout_height="54dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/xyw_amount_pay_symbol_tv"
                android:layout_width="wrap_content"
                android:text="Â¥"
                android:layout_marginLeft="5dp"
                android:textColor="@color/xyw_price_text_selector"
                android:textSize="14sp"
                android:layout_height="wrap_content" />
            <TextView
                android:visibility="gone"
                android:id="@+id/xyw_amount_pay_tv"
                android:layout_width="wrap_content"
                android:textSize="20sp"
                android:textColor="@color/xyw_price_text_selector"
                android:layout_marginLeft="3dp"
                android:text="10"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/xyw_amount_pay_et"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:inputType="number"
                android:layout_height="40dp"
                android:maxLength="5"
                android:background="@android:color/transparent"
                android:textSize="16sp"
                android:textColorHint="@color/xyw_price_text_selector"
                android:textColor="@color/xyw_price_text_selector"
                android:gravity="center"
                />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
