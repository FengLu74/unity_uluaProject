<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:paddingLeft="@dimen/xy_common_border_padding"
                android:paddingRight="@dimen/xy_common_border_padding">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:id="@+id/xy_sigin_back"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginTop="24dp"
                    android:contentDescription="@null"
                    android:scaleType="fitXY"
                    android:src="@drawable/xy_back_selector"/>

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="140dp">

                <TextView
                        android:id="@+id/xy_sign_type"
                        style="@style/xy_style_text_middle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/xy_sign_sign"
                        android:textColor="@color/xy_color_ff5a00"/>

                <EditText
                        android:id="@+id/xy_signin_phone"
                        style="@style/xy_style_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/xy_common_edittext_height"
                        android:layout_below="@id/xy_sign_type"
                        android:layout_marginTop="14dp"
                        android:drawableLeft="@drawable/xy_phone_icon"
                        android:drawablePadding="4dp"
                        android:hint="@string/xy_sign_phone"
                        android:paddingLeft="6dp"
                        android:singleLine="true"
                        android:textCursorDrawable="@null"/>

                <ImageView
                        android:id="@+id/xy_signin_phone_clear"
                        android:layout_width="@dimen/xy_common_edittext_clear_size"
                        android:layout_height="@dimen/xy_common_edittext_clear_size"
                        android:layout_alignBottom="@id/xy_signin_phone"
                        android:layout_alignRight="@id/xy_signin_phone"
                        android:layout_alignTop="@id/xy_signin_phone"
                        android:layout_marginRight="4dp"
                        android:src="@drawable/xy_delete_icon"/>

                <EditText
                        android:id="@+id/xy_signin_pwd"
                        style="@style/xy_style_edit_text"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/xy_common_edittext_height"
                        android:layout_below="@id/xy_signin_phone"
                        android:layout_marginTop="10dp"
                        android:digits="@string/xy_pwd_regex"
                        android:drawableLeft="@drawable/xy_pwd_icon"
                        android:drawablePadding="4dp"
                        android:hint="@string/xy_sign_set_pwd"
                        android:inputType="textPassword"
                        android:maxLength="20"
                        android:paddingLeft="6dp"
                        android:singleLine="true"
                        android:textCursorDrawable="@null"/>

                <ImageView
                        android:id="@+id/xy_signin_pwd_clear"
                        android:layout_width="@dimen/xy_common_edittext_clear_size"
                        android:layout_height="@dimen/xy_common_edittext_clear_size"
                        android:layout_alignBottom="@id/xy_signin_pwd"
                        android:layout_alignRight="@id/xy_signin_pwd"
                        android:layout_alignTop="@id/xy_signin_pwd"
                        android:layout_marginRight="4dp"
                        android:src="@drawable/xy_delete_icon"/>

                <Button
                        android:id="@+id/xy_sign_sign"
                        style="@style/xy.button.positive"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/xy_common_large_btn_height"
                        android:layout_below="@id/xy_signin_pwd"
                        android:layout_marginTop="10dp"
                        android:text="@string/xy_sign_sign"/>

                <LinearLayout
                        android:id="@+id/xy_agreement_layout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/xy_sign_sign"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                    <CheckBox
                            android:id="@+id/xy_sign_agreement_check_box"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:background="@drawable/xy_agreement_checkbox_selector"
                            android:button="@null"
                            android:checked="true"/>

                    <TextView
                            android:id="@+id/xy_sign_agreement_text"
                            style="@style/xy_style_small_btn_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="3dp"
                            android:text="@string/xy_sign_agreement"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"/>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>