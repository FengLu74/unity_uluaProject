<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">


    <style name="xy_button" >
        <item name="android:textColor">@color/xy_common_btn_text_selector</item>
        <item name="android:maxLines">@integer/xy_input_max_lines</item>
        <item name="android:ellipsize">middle</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="xy.button.positive" parent="xy_button">
        <item name="android:background">@drawable/xy_button_positive</item>
    </style>
    <style name="xy.button.negative" parent="xy_button">
        <item name="android:background">@drawable/xy_button_negative</item>
    </style>
    <style name="xy.button.primary" parent="xy_button">
        <item name="android:background">@drawable/xy_button_primary</item>
    </style>
    <style name="xy.button.border" parent="xy_button">
        <item name="android:textColor">@color/xy_color_button_positive_normal</item>
        <item name="android:background">@drawable/xy_button_border</item>
    </style>
    <style name="xy.button.border.disable" parent="xy_button">
        <item name="android:textColor">@color/xy_color_text_normal</item>
        <item name="android:background">@drawable/xy_button_border_disable</item>
    </style>

    <style name="xy_label">
        <item name="android:textColor">@drawable/xy_label</item>
    </style>
    <style name="xy.label.huge" parent="xy_label">
        <item name="android:textSize">@dimen/xy_font_size_huge</item>
    </style>
    <style name="xy.label.large" parent="xy_label">
        <item name="android:textSize">@dimen/xy_font_size_large</item>
    </style>
    <style name="xy.label.middle" parent="xy_label">
        <item name="android:textSize">@dimen/xy_font_size_middle</item>
    </style>
    <style name="xy.label.normal" parent="xy_label">
        <item name="android:textSize">@dimen/xy_font_size_normal</item>
    </style>
    <style name="xy.label.small" parent="xy_label">
        <item name="android:textSize">@dimen/xy_font_size_small</item>
    </style>
    <style name="xy.label.form" parent="xy_label">
        <item name="android:textSize">@dimen/xy_font_size_middle</item>
        <item name="android:textColor">@color/xy_color_text_normal</item>
    </style>

    <style name="xy_edit_text" >
        <item name="android:textColorHint">@color/xy_color_text_normal</item>
        <item name="android:textColor">@color/xy_color_text_highlight</item>
        <item name="android:background">@drawable/xy_et_underline</item>
        <item name="android:textSize">@dimen/xy_font_size_normal</item>
        <item name="android:maxLines">@integer/xy_input_max_lines</item>
        <item name="android:layout_height">@dimen/xy_common_height_40dip</item>
    </style>

    <style name="xy.edit.text.account" parent="xy_edit_text">
        <item name="android:maxLength">@integer/xy_input_text_max_length</item>
       <!-- <item name="android:digits">@string/digits_username</item>-->
        <item name="android:hint">@string/xy_input_uname</item>
    </style>

    <style name="xy.edit.text.password" parent="xy_edit_text">
        <item name="android:maxLength">@integer/xy_input_password_max_length</item>
        <!--<item name="android:digits">@string/digits_password</item>-->
        <item name="android:hint">@string/xy_input_pwd</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="xy.edit.text.captcha" parent="xy_edit_text">
        <item name="android:maxLength">@integer/xy_input_captcha_max_length</item>
        <item name="android:digits">@string/digits_captcha</item>
        <item name="android:hint">@string/xy_captcha</item>
        <item name="android:inputType">phone</item>
    </style>


    <style name="xy.edit.text.phone" parent="xy_edit_text">
        <item name="android:maxLength">@integer/xy_input_phone_max_length</item>
        <item name="android:inputType">phone</item>
        <item name="android:hint">@string/xy_phone_number</item>
    </style>

    <style name="xy.edit.text.id" parent="xy_edit_text">
        <item name="android:maxLength">@integer/xy_input_id_max_length</item>
        <item name="android:digits">@string/digits_identity</item>
    </style>

</resources>
