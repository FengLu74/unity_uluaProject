<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        android:background="@drawable/xy_bg_dialog"
        android:orientation="vertical">

        <include layout="@layout/xyw_fragment_navigation" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/xy_common_margin_10dip"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="8dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/xy_find_pwd_notice"
                android:textColor="@color/xy_color_232323"
                android:textSize="@dimen/xy_font_size_middle"
                android:layout_marginBottom="@dimen/xy_common_margin_10dip"
                />
            <TextView
                android:id="@+id/xy_find_pwd_no_bind"
                style="@style/xy.label.form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/xy_common_margin_10dip"
                android:textSize="@dimen/xy_font_size_middle"
                android:text="@string/xy_find_pwd_no_bind" />
            <Button
                android:id="@+id/xy_find_pwd_online_customer"
                style="@style/xy.button.border"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/xy_common_margin_10dip"
                android:textSize="@dimen/xy_font_size_large"
                android:text="@string/xy_find_pwd_online_customer" />
            </LinearLayout>
    </LinearLayout>

</RelativeLayout>