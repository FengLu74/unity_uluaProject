<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:background="@drawable/xy_fw_view_menu_bg"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/xy_fw_menu_left"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/xy_ic_float_sel" />
    <View
        android:id="@+id/xy_fw_menu_place_holder_left"
        android:layout_width="@dimen/xy_common_width_15dip"
        android:layout_height="match_parent" />
    <LinearLayout
        android:id="@+id/xy_fw_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/xy_fw_body_menu_hidden"
            style="@style/XyFloatWindowItem.MenuHidden"/>

        <ImageButton
            android:id="@+id/xy_fw_body_menu_customer"
            style="@style/XyFloatWindowItem.MenuCustomer"
            />

        <ImageButton
            android:id="@+id/xy_fw_body_menu_user"
            style="@style/XyFloatWindowItem.MenuUser" />
    </LinearLayout>
    <View
        android:id="@+id/xy_fw_menu_place_holder_right"
        android:layout_width="@dimen/xy_common_width_15dip"
        android:layout_height="match_parent" />
    <ImageView
        android:id="@+id/xy_fw_menu_right"
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/xy_ic_float_sel" />

</LinearLayout>